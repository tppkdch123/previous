<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
<style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowNoTitle">true</item>
</style>
    <style name="AppTheme3" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTitleSize">50dp</item>
        <item name="android:colorAccent">@color/red</item>
        <item name="android:colorPrimary">@color/hui</item>
        <item name="android:colorPrimaryDark">@color/hui</item>
        <item name="android:windowTitleBackgroundStyle">@android:style/Theme.Black</item>
    </style>
    <style name="MyCustomTheme" parent="android:Theme">  
        <item name="android:windowBackground">@color/back</item>       
       <item name="android:windowTitleSize">50dp</item>
        <item name="android:colorAccent">@color/red</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
    </style>
    <style name="WindowTitleBackground">
        <item name="android:background">@color/back2</item>
    </style>
</resources>
